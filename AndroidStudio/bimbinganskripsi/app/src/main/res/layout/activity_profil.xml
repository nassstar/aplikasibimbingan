<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_surface"> <View
    android:layout_width="match_parent"
    android:layout_height="200dp"
    android:background="@drawable/bg_header_stimata"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="24dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ganti Password"
                android:textSize="24sp"
                android:textStyle="bold"
                android:textColor="@color/text_primary"
                android:layout_marginBottom="24dp"/> <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="16dp"
            app:cardElevation="6dp"
            app:cardBackgroundColor="@color/white">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="24dp">

                <TextView
                    android:text="Password Lama"
                    android:textStyle="bold"
                    android:textColor="@color/brand_secondary"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"/> <EditText
                android:id="@+id/etPassLama"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/bg_input_modern"
                android:hint="Password Lama"
                android:inputType="textPassword"
                android:paddingHorizontal="16dp"
                android:textColor="@color/text_primary"
                android:textColorHint="@color/text_hint"
                android:layout_marginBottom="16dp"/> <TextView
                android:text="Password Baru"
                android:textStyle="bold"
                android:textColor="@color/brand_secondary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"/>

                <EditText
                    android:id="@+id/etPassBaru"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@drawable/bg_input_modern"
                    android:hint="Password Baru (Min 6)"
                    android:inputType="textPassword"
                    android:paddingHorizontal="16dp"
                    android:textColor="@color/text_primary"
                    android:textColorHint="@color/text_hint"
                    android:layout_marginBottom="16dp"/>

                <TextView
                    android:text="Konfirmasi Password"
                    android:textStyle="bold"
                    android:textColor="@color/brand_secondary"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"/>

                <EditText
                    android:id="@+id/etPassKonfirmasi"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@drawable/bg_input_modern"
                    android:hint="Ulangi Password Baru"
                    android:inputType="textPassword"
                    android:paddingHorizontal="16dp"
                    android:textColor="@color/text_primary"
                    android:textColorHint="@color/text_hint"
                    android:layout_marginBottom="24dp"/>

                <Button
                    android:id="@+id/btnSimpanPass"
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    android:text="Simpan Perubahan"
                    android:background="@drawable/bg_btn_primary"
                    android:backgroundTint="@color/brand_primary"
                    android:textColor="@color/white"
                    android:textStyle="bold"/> </LinearLayout>
        </androidx.cardview.widget.CardView>
        </LinearLayout>
    </ScrollView>
</RelativeLayout>